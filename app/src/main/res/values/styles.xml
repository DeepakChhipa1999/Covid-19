<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorHintTextLight</item>
    </style>
    <style name="TextAppearance.App.TextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextAppearance.App.TextView.H5.White" parent="@style/TextAppearance.App.TextView">
        <item name="android:textSize">@dimen/text_16</item>
    </style>
    <style name="TextAppearance.App.TextView.H5.White.Bold" parent="@style/TextAppearance.App.TextView.H5.White">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
